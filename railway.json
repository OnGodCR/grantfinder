{
  "deploy": {
    "startCommand": "python3 scraper.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": {
    "scraper": {
      "schedule": "0 */12 * * *",
      "command": "python3 scraper.py --validate-existing",
      "timezone": "UTC"
    }
  }
}
